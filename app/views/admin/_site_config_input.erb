<% #params: name, label, order_label, collection %>
<%= f.input name,
      label: label,
      as: :select,
      :input_html => { multiple: true },
      collection: collection.collect { |article| ["#{article.title} [id = #{article.id}]", article.id] } %>
<%= f.input "#{name}_order", label: order_label, hint: "Для изменения порядка вывода записей, введите id записей из поля '#{label}' в желаемой последовательности." %>
