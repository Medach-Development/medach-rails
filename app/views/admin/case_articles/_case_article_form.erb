<%= semantic_form_for [:admin, @case_article], :html => { :multipart => true }, builder: ActiveAdmin::FormBuilder do |f| %>
  <%= f.actions do %>
    <%= f.action :submit %>
    <%= f.action :cancel, :wrapper_html => { class: :cancel} %>
  <% end %>
  <% f.object.body ||= "" %>
  <% f.object.publish_on ||= DateTime.now %>
  <%= f.inputs do %>
    <%= render partial: 'admin/form', locals: { f: f } %>
    <%= render partial: "admin/articles/type", locals: { f: f } unless f.object.new_record? %>
  <% end %>
  <%= f.actions do %>
    <%= f.action :submit %>
    <%= f.action :cancel, :wrapper_html => { class: :cancel} %>
  <% end %>
<% end %>
