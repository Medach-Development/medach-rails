<% f.has_many :banners, heading: 'Мои баннеры', new_record: 'Добавить баннер', allow_destroy: true do |b| %>	
	<% b.inputs "Баннер" do %>
		<%= render partial: "admin/banner_image_uploader", locals: { f: b, label: 'Изображение для баннера', name: "image", message: "Миниатюра изображения не представлена" } %>		
		<% b.input :title %>		
		<% b.input :url, label: 'URL' %>		
		<% b.input :description, label: 'Описание' %>		
		<% b.input :position, label: 'Позиция', as: :select, collection: Banner.positions.keys %>
	<% end %>		
<% end %>